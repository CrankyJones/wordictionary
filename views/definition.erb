  <label for='definition'>Edit the definition</label><br>
  <input id='defintion' name='definition' required value='<%= @definition.definition %>' type='text'><br>
  <br><button type='submit'>Update</button>
</form><br>

<form action='/words/<%= @word.id %>/definitions/<%= @definition.id %>' method='post'>
